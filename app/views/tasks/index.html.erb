<%# app/views/tasks/index.html.erb %>
<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">Meus Lists de Tarefas</h1>
  </div>

  <div class="flex overflow-x-auto gap-6 pb-4" id="lists_list_container" data-controller="sortable" data-sortable-url-value="/lists/:id/move">
    <% @lists.each do |list| %>
      <%= render "lists/list", list: list %>
    <% end %>
    <%# Renderiza o placeholder (que é um formulário) no final %>
    <%= render "lists/add_new_list_placeholder" %>
  </div>

  <% if @lists.empty? %>
    <div class="text-center py-10 mt-[-2rem]">
      <p class="text-xl text-gray-500">Nenhum list encontrado ainda.</p>
    </div>
  <% end %>
</div>

<%# Script para toggle de actions da task (existente) %>
<script>
  document.addEventListener("turbo:load", function () {
    document.querySelectorAll(".task-item").forEach(function (taskEl) {
      taskEl.addEventListener("click", function (e) {
        if (e.target.closest("a, button, input, textarea, [data-action], .task-field")) return;
        const actions = taskEl.querySelector(".task-actions");
        if (!actions) return;
        actions.classList.toggle("hidden");
      });
    });
  });
</script>
